    <div class="fill" id="fill"></div>
  </div>

  <div class="label" id="label"></div>

  <div class="admin">(admin-controlled)</div>
</div>

<script>
const total = 20;

// Persistent storage
let wins = Number(localStorage.getItem("egotyWins")) || 0;

function render() {
  document.getElementById("fill").style.width =
    (wins / total) * 100 + "%";
  document.getElementById("label").textContent =
    `${wins} / ${total} wins`;
}

render();

document.addEventListener("keydown", e => {
  if (!e.ctrlKey || !e.shiftKey) return;

  // Add a win
  if (e.key === "+") {
    wins = Math.min(wins + 1, total);
  }

  // Remove a win
  if (e.key === "-") {
    wins = Math.max(wins - 1, 0);
  }

  localStorage.setItem("egotyWins", wins);
  render();
});

</script>
